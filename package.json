{
  "name": "ainic",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "wrangler pages dev public --compatibility-date=2024-01-01",
    "build": "echo 'No build needed - static files'",
    "deploy": "wrangler pages deploy public",
    "deploy:production": "wrangler pages deploy public --branch=main",
    "types": "tsc --noEmit",
    "db:create": "wrangler d1 create ainic-db",
    "db:migrate:local": "wrangler d1 execute ainic-db --local --file=./schema.sql",
    "db:migrate:remote": "wrangler d1 execute ainic-db --remote --file=./schema.sql"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "typescript": "^5.7.2",
    "wrangler": "^3.94.0"
  }
}
